<h1>Books</h1>

<div class="title">
  <h4 class="title-list">Title</h4>
  <h4 class="title-list">Body</h4>
</div>
<% @books.each do |book| %>
<div class="text">
  <div class="text-list"><%= link_to book.title, books_path %></div>
  <div class="text-list"><%= link_to book.body, books_path %></div>
  <div class="text-list">
   <%= link_to 'Show', "/books/#{book.id}", method: :get %>
   <%= link_to 'Edit', "/books/#{book.id}/edit", method: :get %>
   <%= link_to 'Delete', "/books/#{book.id}", method: :delete %>
  </div>
</div>

<% end %>

<!--投稿部分-->
<h2>New book</h2>
<!--エラー-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
