<h1 class="title">Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>


  <!--%= f.text_area :@book.body %>-->
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', "/books/#{@book.id}", method: :get %>
<%= link_to 'Back', "/books", method: :get %>